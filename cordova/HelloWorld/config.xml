<?xml version='1.0' encoding='utf-8'?>
<widget id="org.aerogear.PushHelloWorld" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>AeroGear UnifiedPush HelloWorld</name>
    <description>
        A sample Cordova application that shows how to use the UnifiedPush server
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application" xmlns:android="http://schemas.android.com/apk/res/android">
            <application android:usesCleartextTraffic="true"></application>
        </edit-config>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <icon src="resources/icon/icon.png" width="57" height="57" />
    <icon src="resources/icon/icon.png" width="72" height="72"  />
    <icon src="resources/icon/icon.png" width="114" height="114"  />
    <icon src="resources/icon/icon.png" width="144" height="144"  />
</widget>
